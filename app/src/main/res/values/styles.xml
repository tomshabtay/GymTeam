<resources>
    <!-- Base application theme. -->



    -<style parent="Theme.AppCompat.Light.NoActionBar" name="AppTheme">

    <!-- your app branding color for the app bar -->


    <item name="colorPrimary">#3F51B5</item>

    <!-- darker variant for the status bar and contextual app bars -->


    <item name="colorPrimaryDark">#303F9F</item>

    <!-- theme UI controls like checkboxes and text fields -->


    <item name="colorAccent">#FF4081</item>

</style>

    <style parent="ThemeOverlay.AppCompat.Dark.ActionBar" name="AppTheme.AppBarOverlay"/>

    <style parent="ThemeOverlay.AppCompat.Light" name="AppTheme.PopupOverlay"/>

    <!-- Activity with no Title -->



    -<style parent="AppTheme" name="ThemeOverlay.MyNoTitleActivity">

    <item name="windowActionBar">false</item>

    <item name="windowNoTitle">true</item>

</style>

    <!-- Dark Buttons -->



    -<style parent="ThemeOverlay.AppCompat.Dark" name="ThemeOverlay.MyDarkButton">

    <item name="colorButtonNormal">@color/colorAccent</item>

    <item name="android:layout_marginRight">4dp</item>

    <item name="android:layout_marginLeft">4dp</item>

    <item name="android:textColor">@android:color/white</item>

</style>

    <!-- Light EditTexts -->


    <style parent="ThemeOverlay.AppCompat.Dark" name="ThemeOverlay.MyLightEditText"/>


    -<style parent="AppTheme" name="ThemeOverlay.MyTextDetail">

    <item name="android:layout_width">wrap_content</item>

    <item name="android:layout_height">wrap_content</item>

    <item name="android:fadeScrollbars">true</item>

    <item name="android:gravity">center</item>

    <item name="android:maxLines">5</item>

    <item name="android:padding">4dp</item>

    <item name="android:scrollbars">vertical</item>

    <item name="android:textSize">14sp</item>

</style>


    -<style parent="AppTheme" name="ThemeOverlay.FirebaseIcon">

    <item name="android:layout_marginTop">@dimen/icon_top_margin</item>

    <item name="android:layout_marginBottom">@dimen/icon_bottom_margin</item>

</style>


    -<style parent="AppTheme" name="ThemeOverlay.MyTitleText">

    <item name="android:gravity">center</item>

    <item name="android:textSize">36sp</item>

</style>

    <dimen name="fab_margin">16dp</dimen>

    <dimen name="activity_horizontal_margin">16dp</dimen>

    <dimen name="activity_vertical_margin">16dp</dimen>

    <dimen name="icon_top_margin">24dp</dimen>

    <dimen name="icon_bottom_margin">24dp</dimen>

    <dimen name="title_bottom_margin">16dp</dimen>

    <dimen name="field_width_standard">160dp</dimen>
</resources>
